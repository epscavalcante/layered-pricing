{
    "name": "epscavalcante/layered-pricing",
    "description": "Definição de preços por camada",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Eduardo Cavalcante",
            "email": "eduardo.ps.cavalcante@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Src\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "ramsey/identifier": "^0.1.0",
        "vlucas/phpdotenv": "^5.6",
        "robmorgan/phinx": "^0.16.10"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "symfony/var-dumper": "^7.3",
        "mockery/mockery": "^1.6"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "test:coverage": "@test --coverage",
        "migrations": "./vendor/bin/phinx"
    }
}
